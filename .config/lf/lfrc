# Menta's lf config file


# Basic settings
set shellopts '-eu'
set ignorecase true
set scrolloff 5
set previewer '~/.config/lf/preview.sh'
set autoquit true

# Cmd functions
## extracs the current file
cmd extract ${{
    set -f
    case $f in
        *.tar.bz|*.tar.bz2|*.tbz|*.tbz2) tar xjvf $f;;
        *.tar.gz|*.tgz) tar xzvf $f;;
        *.tar.xz|*.txz) tar xJvf $f;;
        *.zip) unzip $f;;
        *.rar) unrar x $f;;
        *.7z) 7z x $f;;
    esac
}}



# Bindings
map <c-s> set hidden! # Show - Toggle hidden files
map <enter> shell # Open shell prompt 
map Ee extract

map gc cd ~/.config 
