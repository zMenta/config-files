# automatic set focus new window if it opens on another workspace than the current:
# for_window [class=Thunar] focus
for_window [class=Brave] focus
for_window [class=Emacs] focus



######################################################
# autostart applications/services/commands on login: #
######################################################

# Sets keyboard layout
exec_always setxkbmap $keyboard_layout

# Changes the Capslock key to Escape
exec_always setxkbmap -option caps:escape

# Automatically aranges the tiles of windows
exec_always autotiling

# Statusbar / Polybar
exec_always --no-startup-id ~/.config/polybar/launch.sh

# start a script to setup displays
# uncomment the next line, use arandr to setup displays and save the file as monitor:
exec --no-startup-id ~/.screenlayout/monitor.sh


